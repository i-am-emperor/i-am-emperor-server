{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "strictNullChecks": true,
    "pretty": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}